{% extends 'base.html.twig' %}

{% block title %}Hello OutingController!{% endblock %}

{% block body %}
<div class="row">
<div class="col-8 offset-2 my-5">
<form action="" method="GET">
    <fieldset>
        <legend>Filtrer les sorties</legend>
        <label for="campus">Campus</label>
        <select id="campus">
            {% for c in campus %}
                <option value="{{c.id}}">{{c.name}}</option>
            {% endfor %}
        </select>
        <label for="search"></label>
        <input id="search" type="text" placeholder="Patinoire"/>
        <label for="dateStarted">Entre</label>
        <input type="date" id="dateStarted">
         <label for="dateEnded">Et</label>
        <input type="date" id="dateEnded">
        <input type="checkbox" id="isOrganizer">
        <label for="isOrganizer">Sorties dont je suis l'organisateur</label>
        <input type="checkbox" id="isRegistered">
        <label for="isRegistered">Sorties auquel je suis inscrit.e</label>
        <input type="checkbox" id="isNotRegistered">
        <label for="isNotRegistered">Sorties dont je ne suis pas inscrit.e</label>
        <input type="checkbox" id="isOver">
        <label for="isOver">Sorties passées</label>

        <button>Rechercher</button>
    </fieldset>
</form>
</div>
<div class="col-8 offset-2 my-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrit / Place</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for o in outings %}
                <tr>
                    <td>{{o.name}}</td>
                    <td>{{o.startDate | date('d/m/Y h:i')}}</td>
                    <td>{{o.limitDate | date('d/m/Y')}}</td>
                    <td>{{o.attendees|length}} / {{o.nbInscription}}</td>
                    <td>{{o.state.libelle}}</td>
                    <td>
                        {% if app.user in o.attendees %}Inscrit {% endif %}
                        {% if not app.user in o.attendees %}Non Inscrit {% endif %}
                    </td>
                    <td>{{o.organizer.firstname}}</td>
                    <td></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
