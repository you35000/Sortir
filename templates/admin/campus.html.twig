{% extends 'base.html.twig' %}

{% block title %}Admin : Campus{% endblock %}

{% block main %}
    <div class="col-6 offset-3">
        <h2>Gestion des Campus</h2>
        <form action="{{ path('campus') }}" method="post">
            <div class="row">
                <div class="col-6 offset-1 ">
                    <div class="form-floating">
                        <input type="text" name="search" id="search" placeholder="Recherche un campus"
                               class="form-control">
                        <label for="search">Rechercher un campus</label>
                    </div>
                </div>
                <div class="col-2 offset-1">
                    <button type="submit" class="btn btn-primary my-auto">Rechercher</button>
                </div>
            </div>
        </form>
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Campus</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for c in campus %}
                <tr>
                    <th><input type="text" id="campusName{{ c.id }}" readonly class="form-control-plaintext"
                               value="{{ c.name }}">
                    </th>
                    <th>
                        <button id="update{{ c.id }}" class="btn btn-secondary update"
                                data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier">
                            <i class="fa fa-pencil"></i>
                        </button>
                        <button class="btn btn-danger"
                                data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer">
                            <i class="fa fa-trash-can"></i>
                        </button>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascript%}
<script src="{{ asset('js/campus.js') }}" type="text/javascript"></script>
{% endblock %}
