{% extends 'base.html.twig' %}

{% block title %}  Lieux {% endblock %}

{% block main %}
    <div class="col-6 offset-3">
        <h2>Gestion des Lieux</h2>
{#        <form action="{{ path('places') }}" method="post">#}
            <div class="row">
                <div class="col-6 offset-1 ">
                    <div class="form-floating my-3">
                        <input type="text" name="search" id="search" placeholder="Rechercher une place"
                               class="form-control">
                        <label for="search">Rechercher une place</label>
                    </div>
                </div>
                <div class="col-2 offset-1 align-middle">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Lieux</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for p in places %}
                <tr>
                    <th>{{ p.name }}</th>
                    <th>
                        <a href="{{ path('update_place',{'id':p.id}) }}" class="btn btn-secondary"
                           data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a href="{{ path('delete_place',{'id':p.id}) }}" class="btn btn-danger"
                           data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer">
                            <i class="fa fa-trash-can"></i>
                        </a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
